<UserControl x:Class="VDLaser.Views.Controls.GcodeSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VDLaser.ViewModels.Controls;assembly=VDLaser.ViewModels"
             mc:Ignorable="d">
    <GroupBox Header="{DynamicResource GcodeSettingsGroupBox}" Style="{StaticResource GroupBoxStyleVD}">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="{DynamicResource ErrorManagementLabel}" Margin="0,0,0,5"/>
            <ComboBox ItemsSource="{Binding ErrorModeValues}" Margin="5 0 0 5"
                      SelectedItem="{Binding SelectedErrorMode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      IsEnabled="{Binding IsJobNotRunning}"
                      ToolTip="{DynamicResource ErrorManagementToolTip}"/>
        </StackPanel>
    </GroupBox>
</UserControl>
