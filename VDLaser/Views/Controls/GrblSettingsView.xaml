<UserControl x:Class="VDLaser.Views.Controls.GrblSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:VDLaser.ViewModels.Controls;assembly=VDLaser.ViewModels"
             xmlns:gcode="clr-namespace:VDLaser.Core.Gcode;assembly=VDLaser.Core"
             xmlns:local="clr-namespace:VDLaser.Converters"
             mc:Ignorable="d">
    <GroupBox Header="Grbl settings" Margin="5" IsEnabled="True" Style="{StaticResource GroupBoxStyleVD}">
        <Grid Margin="0,10,0,0" Background="#FFE5E5E5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="7*"/>
            </Grid.RowDefinitions>
            <!--Display build informations: Grbl version and build date-->
            <StackPanel Grid.ColumnSpan="2">
                <Border BorderThickness="1" BorderBrush="LightBlue" Margin="10">
                    <Grid Width="400" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Version:" 
                               HorizontalAlignment="Center" Margin="5,0,0,0" 
                               VerticalAlignment="Center" VerticalContentAlignment="Center" 
                               HorizontalContentAlignment="Center" Height="26" Width="50"/>
                        <Label Grid.Column="2" Content="Build:" 
                                HorizontalAlignment="Center" Margin="5,0,0,0" 
                                VerticalAlignment="Center" VerticalContentAlignment="Center" 
                                HorizontalContentAlignment="Center" Height="26" Width="50"/>
                        <Label Grid.Column="4" Content="Options:" 
                                HorizontalAlignment="Center" Margin="5,0,0,0" 
                                VerticalAlignment="Center" VerticalContentAlignment="Center" 
                                HorizontalContentAlignment="Center" Height="26" Width="60"/>
                        <Label Grid.Column="1" Content="{Binding GrblVersion}" 
                                HorizontalAlignment="Left" 
                                Margin="5,0,0,0" VerticalAlignment="Top" VerticalContentAlignment="Center" 
                                HorizontalContentAlignment="Center" Height="26" Width="50"/>
                        <Label Grid.Column="3" Content="{Binding GrblBuild}" 
                                HorizontalAlignment="Left" Margin="5,0,0,0" VerticalAlignment="Center" 
                                VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Height="26" Width="50"/>
                        <Label Grid.Column="5" Content="{Binding CompileOptions}" 
                                HorizontalAlignment="Left" Margin="5,0,0,0" VerticalAlignment="Center" 
                                VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Height="26" Width="50"/>
                        <StackPanel Grid.Column="6">
                            <Button Margin="0 0 0 0"  Command="{Binding LoadSettingsCommand, Mode=OneWay}" 
                                    HorizontalAlignment="Center" VerticalAlignment="Center"
                                    ToolTip="Refresh Grbl settings"
                                    IsEnabled="{Binding DataContext.IsConnected, RelativeSource={RelativeSource AncestorType=Window}}">
                                <StackPanel Height="20" Width="20">
                                    <Image Source="/Resources/Assets/iconRefresh40.png"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
            <StackPanel Grid.Row="1" Margin="5,5,5,5">
                <Border BorderThickness="1" BorderBrush="LightBlue">
                    <Grid Grid.Row="1" Margin="5" IsEnabled="True">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal" Grid.Row="0">
                            <Button Content="?" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" Width="40" 
                                    Command="{Binding CurrentStatusCommand, Mode=OneWay}"
                                    ToolTip="Status Report Query"/>
                            <Button Content="$" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" Width="40" 
                                    Command="{Binding HelpCommand, Mode=OneWay}"
                                    ToolTip="Grbl print a help message"/>
                            <Button Content="$#" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" Width="40" 
                                    Command="{Binding ParametersCommand, Mode=OneWay}"
                                    ToolTip="View gcode parameters"/>

                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Grid.Row="1">
                            <Button Content="$N" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" Width="40" 
                                    Command="{Binding StartupBlocksCommand, Mode=OneWay}"
                                    ToolTip="View startup blocks"/>
                            <Button Content="$I" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" Width="40" 
                                    Command="{Binding BuildInfoCommand, Mode=OneWay}"
                                    ToolTip="View build info" />
                            <Button Content="$C" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" Width="40" 
                                    Command="{Binding CheckCommand, Mode=OneWay}"
                                    ToolTip="Check gcode mode"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Grid.Row="2">
                            <Button Content="$X" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" Width="40" 
                                    Command="{Binding KillAlarmCommand, Mode=OneWay}"/>
                            <Button Content="$G" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" Width="40" 
                                    Command="{Binding ParserStateCommand, Mode=OneWay}"
                                    ToolTip="View gcode parser state" />
                            <Button Content="$SLP" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" Width="40" 
                                    Command="{Binding SleepCommand, Mode=OneWay}"
                                    ToolTip="Enable Sleep Mode" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Grid.Row="3">
                            <Button Content="ResetX" Margin="5" 
                                    VerticalAlignment="Center" Width="65" 
                                    Command="{Binding ResetXCommand, Mode=OneWay}"
                                    HorizontalAlignment="Left" />
                            <Button Content="ResetY" Margin="5" 
                                    VerticalAlignment="Center" Width="65" 
                                    Command="{Binding ResetYCommand, Mode=OneWay}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Grid.Row="4">
                            <Button Content="G28.1" Margin="5" 
                                    VerticalAlignment="Center" Width="65" 
                                    Command="{Binding SetHome1Command, Mode=OneWay}"
                                    HorizontalAlignment="Left"/>
                            <Button Content="G30.1" Margin="5" 
                                    VerticalAlignment="Center" Width="65" 
                                    HorizontalAlignment="Left" 
                                    Command="{Binding SetHome2Command, Mode=OneWay}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Grid.Row="5">
                            <Button Content="$RST=$" HorizontalAlignment="Left" 
                                    Margin="5" VerticalAlignment="Top" 
                                    Width="70" 
            ToolTip="Restore Grbl settings and data to defaults" 
            Command="{Binding HelpCommand, Mode=OneWay}"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
            <!--Grbl setting informations (command '$$'): get ID, value and description from SettingCodes-->
            
            <DataGrid Grid.Row="1" Grid.Column="1" 
                      AutoGenerateColumns="False" 
                      ItemsSource="{Binding Settings}"
                      IsSynchronizedWithCurrentItem="True" 
                      IsReadOnly="True"
                      Margin="10,0,10,0" 
                      Height="300"
                      VerticalAlignment="Center"
                      HorizontalScrollBarVisibility="Auto"
                      ColumnWidth="SizeToHeader">
                <DataGrid.HorizontalGridLinesBrush>
                    <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.GradientActiveCaptionColorKey}}"/>
                </DataGrid.HorizontalGridLinesBrush>
                <DataGrid.VerticalGridLinesBrush>
                    <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ScrollBarColorKey}}"/>
                </DataGrid.VerticalGridLinesBrush>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="30" />
                    <DataGridTextColumn Header="Nom" Binding="{Binding Name}" Width="50" />
                    <DataGridTextColumn Header="Valeur" Binding="{Binding Value}" Width="45" />
                    <DataGridTextColumn Header="Unité" Binding="{Binding Unit}" Width="60" />
                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="150" />
                    <DataGridTextColumn Header="Commentaire" Binding="{Binding Comment}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </GroupBox>
</UserControl>
