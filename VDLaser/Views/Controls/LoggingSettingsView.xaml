<UserControl x:Class="VDLaser.Views.Controls.LoggingSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VDLaser.Core.Interfaces;assembly=VDLaser.Core"
             mc:Ignorable="d">
    <GroupBox Header="Diagnostic" Style="{StaticResource GroupBoxStyleVD}">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Niveau Logs : " Margin="0,0,0,5"/>
                <ComboBox Grid.Column="1" Width="80" Margin="0 0 0 5"
                          SelectedItem="{Binding SelectedProfile}"
                          ItemsSource="{Binding LogProfileValues}"
                          ToolTip="Mode Normal par défaut pour les utilisateurs"/>
        </StackPanel>
    </GroupBox>
</UserControl>