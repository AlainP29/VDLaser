<UserControl x:Class="VDLaser.Views.Controls.CompactJobReport"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VDLaser.Views.Controls"
             mc:Ignorable="d">
    <Grid>
        <Border BorderBrush="LightBlue" BorderThickness="1" Margin="10">
            <StackPanel Orientation="Vertical" Margin="5">
                <TextBlock Text="{DynamicResource TotalErrorText}" Foreground="Gray" HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding ErrorCount}" Foreground="Green" HorizontalAlignment="Center"/>
                <TextBlock Text="{DynamicResource TotalTimeText}" Foreground="Gray" HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding ActualTotalTime, Converter={StaticResource TimeSpanToStringConverter}}" Foreground="Green" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
