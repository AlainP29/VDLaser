<UserControl x:Class="VDLaser.Views.Controls.CompactJobReport"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VDLaser.Views.Controls"
             mc:Ignorable="d">
    <Grid>
        <Border BorderBrush="LightBlue" BorderThickness="1" Margin="10">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                <TextBlock Text="Error " Foreground="Gray"/>
                    <TextBlock Text="{Binding ErrorCount}" Foreground="Green"/>
                </StackPanel>
                <TextBlock Text="Total time " Foreground="Gray"/>
            <TextBlock Text="{Binding ActualTotalTime, Converter={StaticResource TimeSpanToStringConverter}}" Foreground="Green" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
